<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childDashboard">
    <LinearLayout
        android:id="@+id/childHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#D1F3C9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Child Name"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginBottom="15dp">


            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_below="@id/childHeader"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp">

<!--        <include layout="@layout/activity_app_usage_stats"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->


<!--        <com.androidplot.pie.PieChart-->
<!--            android:id="@+id/piechart"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_below="@+id/childHeader"-->
<!--            />-->
<!--        style="@style/APDefacto.Light"-->
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/showAppStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="All App Stats"
        android:textColor="@color/black"
        android:textStyle="bold" />



</RelativeLayout>